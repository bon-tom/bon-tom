          <Panel.Width value="150px" />
          <OnClick>
            <ActionEvent ReferencedAction="~goBackWithoutSearching" />
          </OnClick>
          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-button" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </Button>
        <Label>
          <Name value="SearchString" />
          <Data value="Search string" />
          <Panel.Height value="#" />
          <Panel.Width value="300px" />
