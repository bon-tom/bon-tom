          <CssClass>
            <CssClassConditional>
              <ClassName value="{theme}-datatable" />
              <IsThemedStyle value="True" />
            </CssClassConditional>
          </CssClass>
        </DataTable>
        <DataTable>
          <Name value="dataTable1" />
          <Panel.Height value="#" />
          <Panel.Width value="*" />
          <Bindings>
            <Binding SourceProperty="DataItems" Expression="collection1" />
          </Bindings>
          <Columns>
            <DataColumn>
              <Name value="dataColumn1" />
              <Caption value="dataColumn1" />
              <Content>
                <Label>
                  <Name value="label1" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="name" />
                  </Bindings>
                  <CssClass>
                    <CssClassConditional>
                      <ClassName value="{theme}-label" />
                      <IsThemedStyle value="True" />
                    </CssClassConditional>
                  </CssClass>
                </Label>
              </Content>
              <HeaderCssClass>
                <CssClassConditional>
                  <ClassName value="{theme}-datacolumn" />
                  <IsThemedStyle value="True" />
                </CssClassConditional>
              </HeaderCssClass>
            </DataColumn>
            <DataColumn>
              <Name value="dataColumn2" />
              <Caption value="Data column 2" />
              <Content>
                <Label>
                  <Name value="label2" />
                  <Bindings>
                    <Binding SourceProperty="Data" Expression="yearOfRelease" />
